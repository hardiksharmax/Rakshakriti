<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <TextView
        android:id="@+id/Rangesett"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Range"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/source"
        android:layout_below="@+id/Rangesett"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Source"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"

        android:padding="8dp"
        />

    <EditText
        android:id="@+id/Destination"
        android:layout_below="@+id/source"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"

        android:hint="Destination"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:padding="8dp"
        />
    <EditText
        android:id="@+id/mismatch"
        android:layout_below="@+id/Destination"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"

        android:hint="Mismatch Limit"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:padding="8dp"
        />

    <EditText
        android:id="@+id/Checkpoint"
        android:layout_below="@+id/mismatch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"

        android:hint="Checkpoint"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:padding="8dp"
        />

    <Button
        android:id="@+id/Save"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Checkpoint"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:text="Save"
        android:textSize="12sp" />




</RelativeLayout>
