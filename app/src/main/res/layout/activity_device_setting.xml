<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <TextView
        android:id="@+id/devicesett"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Device"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/devicename"
        android:layout_below="@+id/devicesett"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Device Name: Tarun's Device"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"

        android:padding="8dp"
        />

    <TextView
        android:id="@+id/devicecode"
        android:layout_below="@+id/devicename"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"

        android:text="Device Code: 01"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/wardname"
        android:layout_below="@+id/devicecode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"

        android:text="Ward Name: Varun Verma"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:padding="8dp"
        />

    <Button
        android:id="@+id/Add"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wardname"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="Add+"
        android:textSize="12sp" />




</RelativeLayout>
